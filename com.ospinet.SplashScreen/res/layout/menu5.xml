<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"
    android:background="#1BA0A2"
    android:padding="5dp">

    <RelativeLayout android:id="@+id/rel_main"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_icon"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:id="@+id/lL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/options"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true">
            <ImageButton
                android:id="@+id/logo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="true"
                android:background="@drawable/ospinet_big_logo" />
            <TextView
                android:id="@+id/logoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OSPINET"
                android:textColor="@android:color/white"
                android:layout_marginLeft="3dp"
                android:clickable="true"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/addrecord" />

        <ImageButton
            android:id="@+id/searchImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_48"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/add"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

    <RelativeLayout android:id="@+id/relSearch"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/rel_main"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/imageBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/back_64"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp" />

        <EditText
            android:id="@+id/search"
            android:fontFamily="Walkway-light"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:drawablePadding="10dp"
            android:paddingLeft="15dp"
            android:hint="search..."
            android:focusable="true"
            android:imeOptions="actionDone"
            android:layout_toRightOf="@+id/imageBack"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true">
        </EditText>
    </RelativeLayout>

</RelativeLayout>